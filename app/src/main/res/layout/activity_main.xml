<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="35dp"
        android:text="Long Form"
        android:textSize="35sp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSubmit"
        android:layout_below="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="First Name"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="Middle Name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et1" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="Last Name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et2" />


            <EditText
                android:id="@+id/etMultiline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:gravity="top"
                android:hint="Address"
                android:inputType="textMultiLine|textPostalAddress"
                android:lines="3"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et3" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/etMultiline1" />


            <EditText
                android:id="@+id/etMultiline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="Gender"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et4" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:gravity="top"
                android:hint="Extra"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/etMultiline2" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/bg_et"
                android:hint="Age"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et5" />

            <View
                android:id="@+id/viewSpace"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/et6"
                android:layout_height="@dimen/margin_20"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:padding="20dp"
        android:text="Submit (stick to bottom)"
        android:textColor="#fff"
        android:textSize="20sp" />

</RelativeLayout>